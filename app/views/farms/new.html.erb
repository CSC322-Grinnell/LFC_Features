<% provide(:title, "New Farm Sign Up") %>
<% provide(:hero, "Register as a Local Farm") %>
<main>
  <div class="signup-form">
    <div class="signup-form-wrapper"></div>
    <%= form_for :farm do |f| %>
        <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
        </p>

        <p>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
        </p>

        <p>
        <%= f.label :password %><br>
        <%= f.text_field :password %>
        </p>

        <p>
        <%= f.label :address %><br>
        <%= f.text_area :address %>
        </p>

        <p>
        <%= f.label :url %><br>
        <%= f.text_field :url %>
        </p>

        <p>
        <%= f.label :phone %><br>
        <%= f.text_field :phone %>
        </p>

        <p>
        <%= f.label :facebook %><br>
        <%= f.text_field :facebook %>
        </p>

        <p>
        <%= f.label :instagram %><br>
        <%= f.text_field :instagram %>
        </p>

        <p>
        <%= f.label :twitter %><br>
        <%= f.text_field :twitter %>
        </p>

       <h2>
         Farm Details
       </h2>
       <p>
          <%= f.label :markets%><br>
            <%= f.collection_check_boxes :market, Market.all, :id,
                :location, checked: Market.all do |b| %>

                <%= b.check_box , :include_hidden => false %>
                <%= b.label %>
                <br>

            <% end %>

      </p>
      <p>
        <%= f.label :growing_methods%><br>
          <%= f.collection_check_boxes :growing_methods, GrowingMethod.all, :id,
              :grow_method, checked: GrowingMethod.all do |b| %>

              <%= b.check_box %>
              <%= b.label %>
              <br>

          <% end %>

      </p>


      <p>
        <%= f.label :sell_methods%><br>
          <%= f.collection_check_boxes :selling_methods, SellingMethod.all, :id,
              :sell_method, checked: SellingMethod.all do |b| %>

              <%= b.check_box %>
              <%= b.label %>
              <br>

          <% end %>

      </p>
      <p>
        <%= f.label :operations%><br>
          <%= f.collection_check_boxes :operations, Operation.all, :id,
              :food, checked: Operation.all do |b| %>

              <%= b.check_box %>
              <%= b.label %>
              <br>

          <% end %>

      </p>

      <p>
      <%= f.submit "Submit" %>
      </p>
    <% end %>
    <div class="signup-form-wrapper"></div>
  </div>
</main>

